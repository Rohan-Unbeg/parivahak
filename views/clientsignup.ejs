<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up</title>
    <link rel="stylesheet" href="/stylesheets/signup.css" />
  </head>
  <body>
    <div class="navbar">
      <a href="/" class="logo">PariVahak</a>
    </div>
    <div class="padding-top"></div>
    <div class="main">
      <div class="container">
        <h1>Sign up to find work you love</h1>
        <div class="button-group">
          <button class="google-button">
            <svg viewBox="0 0 24 24" aria-hidden="true" class="google-icon">
              <!-- Google icon SVG code -->
            </svg>
            Continue with Google
          </button>
        </div>
        <div class="divider">or</div>
        <form id="signup-form" action="/signup" method="post">
          <div class="form-group">
            <input type="text" placeholder="First name" name="fname" required />
            <input type="text" placeholder="Last name" name="lname" required />
          </div>
          <div class="form-group">
            <input type="email" placeholder="Email" name="email" required />
          </div>
          <div class="form-group">
            <input
              type="password"
              placeholder="Password (8 or more characters)"
              name="password"
              required
            />
            <span class="password-info">
              <svg viewBox="0 0 24 24" aria-hidden="true" class="info-icon">
                <!-- Info icon SVG code -->
              </svg>
            </span>
          </div>
          <div class="form-group">
            <select name="country" required>
              <option value="india">India</option>
              <!-- Add more country options as needed -->
            </select>
          </div>
          <div class="checkbox-group">
            <input type="checkbox" id="helpful-emails" checked />
            <label for="helpful-emails">
              Send me helpful emails to find rewarding work and job leads.
            </label>
          </div>
          <div class="terms-group">
            <input type="checkbox" id="terms" required />
            <label for="terms">
              Yes, I understand and agree to the
              <a href="#">PariVahak Terms of Service</a>, including the
              <a href="#">User Agreement</a> and <a href="#">Privacy Policy</a>.
            </label>
          </div>
          <button type="submit" class="create-account">
            Create my account
          </button>
        </form>
        <p class="login-link">
          Already have an account? <a href="/signin">Log In</a>
        </p>
      </div>
    </div>

    <script>
      document
        .getElementById("signup-form")
        .addEventListener("submit", function (event) {
          // event.preventDefault(); // Prevent default form submission

          // Fetch API to send POST request to /signup
          fetch("/signup", {
            method: "POST",
            body: new FormData(document.getElementById("signup-form")),
            // You can add headers if needed, such as content-type
          })
            .then((response) => {
              // Handle response
              if (response.ok) {
                // If successful response, redirect to desired location
                window.location.href = "/success"; // Change to desired location
              } else {
                // Handle errors or display error messages
                console.error("Error:", response.statusText);
              }
            })
            .catch((error) => {
              console.error("Error:", error);
            });
        });
    </script>
  </body>
</html>
